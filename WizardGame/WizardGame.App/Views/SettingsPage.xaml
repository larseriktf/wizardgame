<Page
    x:Class="WizardGame.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1024" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="256" MaxHeight="256" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Image Style="{StaticResource TitleScreenBG}"
               Grid.ColumnSpan="3"
               Grid.RowSpan="3"
               Source="/Assets/Images/TitleScreen/fantasyLand.jpg"/>

        <TextBlock Style="{StaticResource MainTitle}"
                   Grid.Column="0" Grid.ColumnSpan="3"
                   Text="Settings"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Rectangle Style="{StaticResource MenuBoxBG}" Fill="Black" Stretch="Fill"/>
            <StackPanel>
                <Button Style="{StaticResource BaseButton}" Content="Back" Click="OnClickToGoBack"/>
                <Pivot>
                    <PivotItem Header="General">
                        <!-- Pivot content here -->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Setting 1"/>
                                    <TextBlock Text="Setting 2"/>
                                    <TextBlock Text="Setting 3"/>
                                    <TextBlock Text="Setting 4"/>
                                    <TextBlock Text="Setting 5"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Option / Option"/>
                                    <TextBlock Text="Option / Option"/>
                                    <TextBlock Text="Option / Option"/>
                                    <TextBlock Text="Option / Option"/>
                                    <TextBlock Text="Option / Option"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                    </PivotItem>
                    <PivotItem Header="Keybindings">
                        <!-- Pivot content here -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Move Up"/>
                                <TextBlock Text="Move Left"/>
                                <TextBlock Text="Move Down"/>
                                <TextBlock Text="Move Right"/>
                                <TextBlock Text="Action 1"/>
                                <TextBlock Text="Action 2"/>
                                <TextBlock Text="Action 3"/>
                                <TextBlock Text="Action 4"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="W"/>
                                    <TextBlock Text="Change"
                                               Margin="10 0 0 0">

                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="DarkGray"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                
                                
                                
                            </StackPanel>
                        </Grid>
                    </PivotItem>
                </Pivot>
            </StackPanel>
            
            
        </Grid>
    </Grid>
</Page>
