<Page
    x:Class="WizardGame.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1024" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="256" MaxHeight="256" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Image Style="{StaticResource TitleScreenBG}"
               Grid.ColumnSpan="3"
               Grid.RowSpan="3"
               Source="/Assets/Images/TitleScreen/fantasyLand.jpg"/>

        <TextBlock Style="{StaticResource MainTitle}"
                   Grid.Column="0" Grid.ColumnSpan="3"
                   Text="Settings"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Rectangle Style="{StaticResource MenuBoxBG}" Fill="Black" Stretch="Fill"/>
            <Button Style="{StaticResource BaseButton}" Content="Back" Click="OnClickToGoBack"/>

            <Pivot>
                <PivotItem Header="General">
                    <!-- Pivot content here -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="512"/>
                            <ColumnDefinition Width="512"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Setting 1" Grid.Column="0"/>
                        <TextBlock Text="Setting 2" Grid.Column="0"/>
                        <TextBlock Text="Setting 3" Grid.Column="0"/>
                        <TextBlock Text="Setting 4" Grid.Column="0"/>
                        <TextBlock Text="Setting 5" Grid.Column="0"/>



                        <TextBlock Text="Option / Option" Grid.Column="1"/>
                        <TextBlock Text="Option / Option" Grid.Column="1"/>
                        <TextBlock Text="Option / Option" Grid.Column="1"/>
                        <TextBlock Text="Option / Option" Grid.Column="1"/>
                        <TextBlock Text="Option / Option" Grid.Column="1"/>
                    </Grid>

                </PivotItem>

                <PivotItem Header="Keybindings">
                    <!-- Pivot content here -->
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>
