<Page
    x:Class="WizardGame.App.Views.PlayerProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:WizardGame.Model"
    Loaded="OnLoadedAsync"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid Background="Indigo">

        <StackPanel>
            <TextBlock Style="{StaticResource MainTitle}"
                       Text="Player Profiles"/>

            <Grid Height="512">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0">
                    <StackPanel>
                        <Button Padding="0"
                                Click="OnToggleProfileCreationMenu">
                            <Grid Width="128"
                                  Height="128">
                                <Image Source="/Assets/Images/addButton.png"
                                       Stretch="UniformToFill"/>
                                <TextBlock Text="Add New Profile"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <GridView x:Name="ConfigurationsGridView"
                                  ItemsSource="{x:Bind PlayerProfileViewModel.PlayerProfiles}"
                                  SelectionMode="Single">

                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="model:PlayerProfile">
                                    <Grid Width="128"
                                          Height="128">
                                        <Image Source="/Assets/Images/playerProfile.png"
                                                   Stretch="UniformToFill"/>
                                        <TextBlock Text="{x:Bind PlayerName}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       FontFamily="{StaticResource CurseCasual}"
                                                       FontSize="20"/>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </StackPanel>

        <Grid x:Name="ProfileCreationMenu"
              Visibility="Collapsed"
              Width="512"
              Height="512">

            <Rectangle Fill="Black" Opacity="0.25"/>

            <StackPanel Padding="64">
                <TextBlock Text="Player Profile Creation" HorizontalAlignment="Center"/>
                <TextBox Header="Enter Player Tag"
                         Width="256"
                         Height="64"
                         Margin="32"/>
                <Button Content="Add Player Profile"
                        HorizontalAlignment="Center"
                        Click="OnAddPlayerProfileAsync"/>
                <Button Content="Cancel"
                        HorizontalAlignment="Center"
                        Click="OnToggleProfileCreationMenu"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
