<Page
    x:Class="WizardGame.App.Views.TitleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource PageStyle}">

    <Grid>
        <Image Stretch="UniformToFill" Grid.ColumnSpan="2" Source="/Assets/Images/fantasyLand.jpg"/>

        <StackPanel Height="200">
            <TextBlock Style="{StaticResource MainTitle}"
                       Text="Phantastic Wizard"
                       Foreground="Purple"/>
            <TextBlock Text="By Lars Erik"
                       Foreground="Purple"
                       FontSize="32"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Click to begin"
                       Foreground="Purple"
                       FontSize="32"
                       Margin="64 0 0 0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Click="OnStartGame"/>
    </Grid>
</Page>
