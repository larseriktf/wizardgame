<Page
    x:Class="WizardGame.App.Views.TitleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="512"/>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="64"/>
        </Grid.ColumnDefinitions>

        <Image Stretch="UniformToFill"
               Grid.ColumnSpan="4"
               Source="/Assets/Images/TitleScreen/fantasyLand.jpg"/>

        <Grid Grid.Column="0"
              Grid.Row="1"
              Background="Indigo"
              Grid.RowSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="384"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource MainTitle}"
                       Grid.Row="0"
                       Text="Phantastic Wizard"/>

            <StackPanel Style="{StaticResource MenuStackPanel}"
                        Orientation="Vertical"
                        Grid.Row="1">
                <Button Content="START NEW GAME"
                        Click="OnStartGame"/>
                <Button Content="CONTINUE GAME"
                        Click="OnContinueGame"/>
                <Button Content="SPELL BOOK"
                        Click="OnOpenSpellBook"/>
                <Button Content="SETTINGS"
                        Click="OnOpenSettings"/>
                <Button Content="QUIT GAME"
                        Click="OnQuitGame"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="786"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Frame x:Name="TitleScreenFrame"
                   Grid.Row="1"/>
            
        </Grid>
    </Grid>
</Page>
