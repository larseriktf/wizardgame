<Page
    x:Class="WizardGame.App.Views.TitleScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Stretch="UniformToFill" Grid.ColumnSpan="2" Source="/Assets/Images/fantasyLand.jpg"/>

        <StackPanel>
            <TextBlock Style="{StaticResource MainTitle}" Text="Phantastic Wizard" Foreground="Purple"/>
            <TextBlock Style="{StaticResource MainTitle}" Text="By Lars Erik" Foreground="Purple" FontSize="16"/>
            <TextBlock Style="{StaticResource MainTitle}" Text="Click to begin" Foreground="Purple" FontSize="16" Margin="64 0 0 0"/>
        </StackPanel>
        <Button Click="OnStartGame"/>
    </Grid>
</Page>
