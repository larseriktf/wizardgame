<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontFamily x:Key="CurseCasual">./Fonts/Curse-Casual.ttf#Curse Casual</FontFamily>

    <!-- Base Styles -->
    <Style TargetType="Button"
           x:Key="BaseButton">
        <Setter Property="Background" Value="Purple"/>
        <Setter Property="Width" Value="auto"/>
        <Setter Property="Padding" Value="32 16"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="{StaticResource CurseCasual}"/>
    </Style>

    <!-- Specific Styles -->
    <Style TargetType="Button"
           BasedOn="{StaticResource BaseButton}"
           x:Key="MenuButton">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 0 0 24"/>
        <Setter Property="Width" Value="256"/>
        <Setter Property="Height" Value="64"/>
    </Style>

    <Style TargetType="StackPanel"
           x:Key="MenuStackPanel">
        <Setter Property="Padding" Value="32"/>
    </Style>

    <Style TargetType="TextBlock"
           x:Key="MainTitle">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="128"/>
        <Setter Property="Foreground" Value="Purple"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="Image"
           x:Key="TitleScreenBG">
        <Setter Property="Stretch" Value="UniformToFill"/>
    </Style>

    <Style TargetType="Rectangle"
           x:Key="MenuBoxBG">
        <Setter Property="Opacity" Value=".25"/>
    </Style>
</ResourceDictionary>
